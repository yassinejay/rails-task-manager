<%= form_for(@task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :details %>
  <%= f.text_field :details %>
  <% if @task.new_record? %>
    <%= f.submit 'Creat!' %>
  <% else %>
  <%= f.label :completed %>
  <%= f.check_box :completed %>
    <%= f.submit 'Update!' %>
  <% end %>
<% end %>

